<!DOCTYPE html>
<html>
  <head>
    <title>TheFinalMarket Admin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <%= link_to "TheFinalMarket Admin", admin_root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="adminNavbar">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <%= link_to "Dashboard", admin_root_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Users", admin_users_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Products", admin_products_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Seller Applications", admin_seller_applications_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Back to Site", root_path, class: "nav-link" %>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <% flash.each do |name, msg| %>
        <div class="alert alert-<%= name == 'notice' ? 'success' : name %> alert-dismissible fade show">
          <%= msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
<%# app/views/reviews/_review.html.erb %>
<div id="review_<%= review.id %>" class="bg-white rounded-lg shadow-sm p-6 mb-4">
  <div class="flex items-start justify-between">
    <div class="flex items-start">
      <div class="mr-4">
        <%= link_to review.reviewer.name, user_path(review.reviewer), 
            class: "font-medium text-gray-900 hover:text-blue-600" %>
        <div class="flex items-center mt-1">
          <% review.rating.times do %>
            <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          <% end %>
          <% (5 - review.rating).times do %>
            <svg class="w-4 h-4 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          <% end %>
        </div>
      </div>
      <div>
        <p class="text-sm text-gray-500">
          <%= time_ago_in_words(review.created_at) %> ago
        </p>
        <div class="mt-2 text-gray-700">
          <%= simple_format(review.content) %>
        </div>
      </div>
    </div>
    
    <% if current_user && (current_user == review.reviewer || current_user.admin?) %>
      <div class="flex space-x-2">
        <%= button_to review_path(review), method: :delete, 
            class: "text-red-600 hover:text-red-800",
            data: { confirm: "Are you sure you want to delete this review?" } do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="mt-4 flex items-center justify-between">
    <div class="flex items-center">
      <% if current_user && current_user != review.reviewer %>
        <% if current_user.helpful_votes.exists?(review: review) %>
          <%= button_to helpful_review_path(review, undo: true), method: :delete,
              class: "flex items-center text-blue-600 hover:text-blue-800" do %>
            <svg class="w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            Helpful
          <% end %>
        <% else %>
          <%= button_to helpful_review_path(review), method: :post,
              class: "flex items-center text-gray-600 hover:text-blue-600" do %>
            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"/>
            </svg>
            Helpful
          <% end %>
        <% end %>
      <% end %>
      <% if review.helpful_count > 0 %>
        <span class="ml-2 text-sm text-gray-500">
          <%= pluralize(review.helpful_count, 'person') %> found this helpful
        </span>
      <% end %>
    </div>
  </div>
</div>
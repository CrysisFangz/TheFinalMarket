<div class="comment mb-3" id="<%= dom_id(comment) %>">
  <div class="d-flex">
    <div class="flex-grow-1">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <strong><%= comment.user.name %></strong>
          <% if comment.user.admin? || comment.user.moderator? %>
            <span class="badge bg-<%= comment.user.admin? ? 'danger' : 'info' %> ms-1">
              <%= comment.user.role.titleize %>
            </span>
          <% end %>
        </div>
        <small class="text-muted"><%= time_ago_in_words(comment.created_at) %> ago</small>
      </div>
      <div class="mt-2">
        <%= simple_format(comment.content) %>
      </div>
    </div>
  </div>
</div>
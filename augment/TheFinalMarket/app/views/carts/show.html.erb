<div class="container">
  <h1>Your Cart</h1>

  <% if @line_items.empty? %>
    <p>Your cart is empty.</p>
  <% else %>
    <table class="table">
      <thead>
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @line_items.each do |item| %>
          <tr>
            <td><%= item.product.name %></td>
            <td><%= number_to_currency(item.product.price) %></td>
            <td><%= item.quantity %></td>
            <td><%= number_to_currency(item.total_price) %></td>
            <td><%= button_to "Remove", line_item_path(item), method: :delete, class: "btn btn-danger btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="text-end">
      <h3>Total: <%= number_to_currency(@cart.total_price) %></h3>
    </div>
  <% end %>
</div>

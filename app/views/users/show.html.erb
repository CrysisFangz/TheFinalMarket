<div class="user-profile-container">
  <div class="row g-4">
    <!-- User Information Sidebar -->
    <div class="col-lg-4">
      <div class="user-info-card card shadow-sm">
        <div class="card-body">
          <!-- User Header -->
          <div class="user-header mb-4">
            <h1 class="user-name h3 mb-2">
              <%= @user.name %>
              <%= render 'shared/seller_badge', user: @user %>
            </h1>
            <div class="user-level-section">
              <%= level_badge(@user) %>
              <%= render_user_level_progress(@user) %>
            </div>
          </div>

          <!-- User Details -->
          <div class="user-details">
            <div class="detail-row mb-3">
              <span class="detail-label">Email:</span>
              <span class="detail-value"><%= @user.email %></span>
            </div>
            <div class="detail-row mb-3">
              <span class="detail-label">Member since:</span>
              <span class="detail-value">
                <%= @user.created_at.strftime("%B %Y") %>
              </span>
            </div>
          </div>
        </div>
      </div>

      <!-- Seller Application Card -->
      <%= render_seller_application_card if can_apply_as_seller? %>
    </div>

    <!-- Main Content Area -->
    <div class="col-lg-8">
      <!-- Seller Profile Section -->
      <%= render 'shared/seller_profile' if @user.gem? %>

      <!-- Products Section -->
      <%= render_user_products_section if @user.gem? && @user.active? %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>My Disputes</h2>
      <div>
        <%= link_to "Submit New Dispute", new_dispute_path, class: "btn btn-primary" %>
        <%= link_to "View Disputes Against Me", my_disputes_disputes_path, 
            class: "btn btn-outline-secondary ms-2" %>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <% if @disputes.any? %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Status</th>
                  <th>Title</th>
                  <th>Reported User</th>
                  <th>Submitted</th>
                  <th>Last Update</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @disputes.each do |dispute| %>
                  <tr>
                    <td>
                      <span class="badge bg-<%= {
                        'pending': 'warning',
                        'under_review': 'info',
                        'resolved': 'success',
                        'dismissed': 'danger'
                      }[dispute.status.to_sym] %>">
                        <%= dispute.status.titleize %>
                      </span>
                    </td>
                    <td><%= dispute.title %></td>
                    <td><%= dispute.reported_user.name %></td>
                    <td><%= time_ago_in_words(dispute.created_at) %> ago</td>
                    <td><%= time_ago_in_words(dispute.updated_at) %> ago</td>
                    <td>
                      <%= link_to "View Details", dispute_path(dispute), class: "btn btn-sm btn-outline-primary" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-4">
            <p class="text-muted mb-0">You haven't submitted any disputes yet.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%# app/views/disputes/_form.html.erb %>
<%= form_with(model: [@order, @dispute], local: true, class: "space-y-6") do |f| %>
  <% if @dispute.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@dispute.errors.count, "error") %> prohibited this dispute from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @dispute.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <div class="grid grid-cols-1 gap-6">
        <div>
          <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-spirit-primary focus:ring-spirit-primary sm:text-sm" %>
        </div>

        <div>
          <%= f.label :dispute_type, class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :dispute_type, Dispute.dispute_types.keys.map { |type| [type.titleize, type] },
                      {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-spirit-primary focus:ring-spirit-primary sm:text-sm" %>
        </div>

        <div>
          <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :description, rows: 5, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-spirit-primary focus:ring-spirit-primary sm:text-sm" %>
          <p class="mt-2 text-sm text-gray-500">
            Please provide detailed information about your dispute. Include any relevant facts that will help resolve the issue.
          </p>
        </div>

        <div>
          <%= f.label :amount, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1 relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-500 sm:text-sm">$</span>
            </div>
            <%= f.number_field :amount, step: '0.01', value: @dispute.amount,
                            class: "pl-7 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-spirit-primary focus:ring-spirit-primary sm:text-sm" %>
          </div>
          <p class="mt-2 text-sm text-gray-500">
            Enter the amount in dispute. This cannot exceed the order total.
          </p>
        </div>
      </div>
    </div>

    <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
      <%= link_to "Cancel", order_path(@order), class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-spirit-primary" %>
      <%= f.submit class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-spirit-primary hover:bg-spirit-secondary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-spirit-primary" %>
    </div>
  </div>
<% end %>
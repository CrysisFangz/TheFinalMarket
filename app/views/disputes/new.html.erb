<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h2>Submit a Dispute</h2>
      </div>
      <div class="card-body">
        <%= form_with(model: @dispute, local: true) do |f| %>
          <% if @dispute.errors.any? %>
            <div class="alert alert-danger">
              <h4><%= pluralize(@dispute.errors.count, "error") %> prevented this dispute from being submitted:</h4>
              <ul>
                <% @dispute.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :reported_user_id, "User to Report", class: "form-label" %>
            <%= f.collection_select :reported_user_id, User.where.not(id: current_user.id), :id, :name, 
                { prompt: "Select a user to report" }, { class: "form-select" } %>
          </div>

          <div class="mb-3">
            <%= f.label :title, "Dispute Title", class: "form-label" %>
            <%= f.text_field :title, class: "form-control", placeholder: "Brief description of the issue" %>
            <div class="form-text">Be specific and concise</div>
          </div>

          <div class="mb-3">
            <%= f.label :description, "Detailed Description", class: "form-label" %>
            <%= f.text_area :description, class: "form-control", rows: 5, 
                placeholder: "Provide all relevant details about the dispute" %>
            <div class="form-text">Include any relevant information that will help moderators understand and resolve the issue</div>
          </div>

          <div class="d-grid gap-2">
            <%= f.submit "Submit Dispute", class: "btn btn-primary" %>
            <%= link_to "Cancel", disputes_path, class: "btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

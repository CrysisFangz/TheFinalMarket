<%# Modern Enhanced Product Show Page %>
<div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-purple-50">
  
  <%# Breadcrumb Navigation %>
  <div class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <nav class="flex items-center gap-2 text-sm" aria-label="Breadcrumb">
        <%= link_to "Home", root_path, class: "text-gray-500 hover:text-gray-700" %>
        <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
        <%= link_to "Products", products_path, class: "text-gray-500 hover:text-gray-700" %>
        <% if @product.categories.any? %>
          <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
          </svg>
          <%= link_to @product.categories.first.name, category_path(@product.categories.first), 
              class: "text-gray-500 hover:text-gray-700" %>
        <% end %>
        <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
        <span class="text-gray-900 font-medium"><%= truncate(@product.name, length: 40) %></span>
      </nav>
    </div>
  </div>

  <%# Main Product Section %>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-12">
      
      <%# Left Column - Image Gallery %>
      <div class="space-y-4" data-controller="gallery">
        <%# Main Image %>
        <div class="relative aspect-square rounded-2xl overflow-hidden bg-white shadow-xl">
          <% if @product.images&.any?(&:attached?) %>
            <%= image_tag @product.images.first.variant(resize_to_limit: [800, 800]), 
                alt: @product.name,
                class: "w-full h-full object-cover",
                data: { gallery_target: "mainImage" } %>
          <% else %>
            <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-gray-100 to-gray-200">
              <svg class="w-32 h-32 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
          <% end %>
          
          <%# Image Zoom Overlay %>
          <button class="absolute top-4 right-4 action-button" 
                  data-action="click->gallery#zoom"
                  title="Zoom">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v6m3-3H7" />
            </svg>
          </button>
        </div>
        
        <%# Thumbnail Gallery %>
        <% if @product.images&.count.to_i > 1 %>
          <div class="grid grid-cols-5 gap-3">
            <% @product.images.each_with_index do |image, index| %>
              <button class="aspect-square rounded-lg overflow-hidden border-2 border-transparent hover:border-purple-500 transition-all"
                      data-action="click->gallery#select"
                      data-index="<%= index %>">
                <%= image_tag image.variant(resize_to_limit: [200, 200]), 
                    alt: "#{@product.name} - Image #{index + 1}",
                    class: "w-full h-full object-cover" %>
              </button>
            <% end %>
          </div>
        <% end %>
      </div>

      <%# Right Column - Product Details %>
      <div class="space-y-6">
        
        <%# Product Title %>
        <div>
          <h1 class="text-4xl font-extrabold text-gray-900 mb-4 leading-tight">
            <%= @product.name %>
          </h1>
          
          <%# Rating & Reviews %>
          <% if @product.reviews.any? %>
            <div class="flex items-center gap-4 mb-4">
              <div class="flex items-center">
                <% 5.times do |i| %>
                  <svg class="w-5 h-5 <%= i < @product.average_rating.round ? 'text-yellow-400' : 'text-gray-300' %> fill-current" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                <% end %>
              </div>
              <span class="text-gray-600">
                <span class="font-bold"><%= @product.average_rating.round(1) %></span> 
                (<%= pluralize(@product.reviews.count, 'review') %>)
              </span>
            </div>
          <% end %>
        </div>

        <%# Price Section %>
        <div class="p-6 bg-gradient-to-r from-purple-50 to-pink-50 rounded-2xl border-2 border-purple-200">
          <% if @product.discount_price.present? %>
            <div class="flex items-baseline gap-4 mb-2">
              <span class="text-5xl font-extrabold text-gray-900">
                <%= number_to_currency(@product.discount_price) %>
              </span>
              <span class="text-2xl text-gray-500 line-through">
                <%= number_to_currency(@product.price) %>
              </span>
              <span class="badge bg-red-500 text-white text-lg px-4 py-1">
                Save <%= number_to_percentage(@product.discount_percentage, precision: 0) %>
              </span>
            </div>
          <% else %>
            <span class="text-5xl font-extrabold text-gray-900">
              <%= number_to_currency(@product.price) %>
            </span>
          <% end %>
          
          <p class="text-sm text-gray-600 mt-2">
            <svg class="w-4 h-4 inline text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            Free shipping on orders over $50
          </p>
        </div>

        <%# Stock Status %>
        <div class="flex items-center gap-3">
          <% if @product.stock_quantity.to_i > 10 %>
            <span class="flex items-center gap-2 text-green-600 font-semibold">
              <span class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></span>
              In Stock
            </span>
          <% elsif @product.stock_quantity.to_i > 0 %>
            <span class="flex items-center gap-2 text-orange-600 font-semibold">
              <span class="w-3 h-3 bg-orange-500 rounded-full"></span>
              Only <%= @product.stock_quantity %> left!
            </span>
          <% else %>
            <span class="flex items-center gap-2 text-red-600 font-semibold">
              <span class="w-3 h-3 bg-red-500 rounded-full"></span>
              Out of Stock
            </span>
          <% end %>
        </div>

        <%# Seller Information %>
        <div class="p-4 bg-white rounded-xl border border-gray-200 hover:border-purple-300 transition-colors">
          <div class="flex items-center gap-4">
            <% if @product.user.avatar&.attached? %>
              <%= image_tag @product.user.avatar.variant(resize_to_limit: [80, 80]), 
                  class: "w-12 h-12 rounded-full object-cover ring-4 ring-purple-100" %>
            <% else %>
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center text-white text-xl font-bold ring-4 ring-purple-100">
                <%= @product.user.name.first.upcase %>
              </div>
            <% end %>
            
            <div class="flex-1">
              <%= link_to @product.user.name, user_path(@product.user), 
                  class: "text-lg font-bold text-gray-900 hover:text-purple-600 flex items-center gap-2" do %>
                <%= @product.user.name %>
                <% if @product.user.verified_seller? %>
                  <svg class="w-5 h-5 text-blue-500" fill="currentColor" viewBox="0 0 20 20" title="Verified Seller">
                    <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                <% end %>
              <% end %>
              
              <% if @product.user.seller_rating.present? %>
                <div class="flex items-center gap-1 text-sm text-gray-600">
                  <span>⭐ <%= @product.user.seller_rating.round(1) %></span>
                  <span class="text-gray-400">•</span>
                  <span><%= pluralize(@product.user.products.count, 'product') %></span>
                </div>
              <% end %>
            </div>
            
            <%= link_to "View Shop", user_path(@product.user), 
                class: "btn-secondary py-2 px-4 text-sm" %>
          </div>
        </div>

        <%# Quantity Selector %>
        <div class="space-y-3" data-controller="quantity">
          <label class="block text-sm font-semibold text-gray-700">Quantity</label>
          <div class="flex items-center gap-4">
            <div class="flex items-center border-2 border-gray-300 rounded-lg overflow-hidden">
              <button class="px-4 py-3 bg-gray-100 hover:bg-gray-200 transition-colors" 
                      data-action="click->quantity#decrease">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" />
                </svg>
              </button>
              
              <input type="number" 
                     value="1" 
                     min="1" 
                     max="<%= @product.stock_quantity %>"
                     data-quantity-target="input"
                     class="w-20 text-center text-lg font-bold border-none outline-none">
              
              <button class="px-4 py-3 bg-gray-100 hover:bg-gray-200 transition-colors" 
                      data-action="click->quantity#increase">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
              </button>
            </div>
            
            <span class="text-sm text-gray-600">
              <%= @product.stock_quantity %> available
            </span>
          </div>
        </div>

        <%# Action Buttons %>
        <div class="space-y-3">
          <%= button_to cart_items_path(product_id: @product.id), 
              method: :post,
              class: "w-full btn-primary py-4 text-lg font-bold flex items-center justify-center gap-3",
              data: { turbo: false } do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            <span>Add to Cart</span>
          <% end %>
          
          <div class="grid grid-cols-2 gap-3">
            <%= button_to wishlist_add_item_path(product_id: @product.id), 
                method: :post,
                class: "btn-secondary py-3 flex items-center justify-center gap-2",
                data: { turbo: false } do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
              <span>Wishlist</span>
            <% end %>
            
            <button class="btn-ghost py-3 flex items-center justify-center gap-2"
                    data-action="click->share#open">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
              </svg>
              <span>Share</span>
            </button>
          </div>
        </div>

        <%# Trust Badges %>
        <div class="grid grid-cols-3 gap-4 pt-6 border-t border-gray-200">
          <div class="text-center">
            <svg class="w-8 h-8 mx-auto mb-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
            <p class="text-xs font-semibold text-gray-700">Secure Payment</p>
          </div>
          <div class="text-center">
            <svg class="w-8 h-8 mx-auto mb-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
            </svg>
            <p class="text-xs font-semibold text-gray-700">Money-Back</p>
          </div>
          <div class="text-center">
            <svg class="w-8 h-8 mx-auto mb-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
            </svg>
            <p class="text-xs font-semibold text-gray-700">Free Returns</p>
          </div>
        </div>
      </div>
    </div>

    <%# Tabs Section - Description, Specifications, Reviews %>
    <div class="card-modern p-8 mb-12" data-controller="tabs">
      <div class="border-b border-gray-200 mb-8">
        <nav class="flex gap-8" aria-label="Tabs">
          <button class="tab-button active py-4 px-2 border-b-2 border-purple-600 font-semibold text-purple-600"
                  data-action="click->tabs#switch"
                  data-tab="description">
            Description
          </button>
          <button class="tab-button py-4 px-2 border-b-2 border-transparent font-semibold text-gray-500 hover:text-gray-700 hover:border-gray-300"
                  data-action="click->tabs#switch"
                  data-tab="specifications">
            Specifications
          </button>
          <button class="tab-button py-4 px-2 border-b-2 border-transparent font-semibold text-gray-500 hover:text-gray-700 hover:border-gray-300"
                  data-action="click->tabs#switch"
                  data-tab="reviews">
            Reviews (<%= @product.reviews.count %>)
          </button>
        </nav>
      </div>

      <%# Description Tab %>
      <div class="tab-content" data-tabs-target="panel" data-tab="description">
        <div class="prose prose-lg max-w-none">
          <%= simple_format(@product.description) %>
        </div>
      </div>

      <%# Specifications Tab %>
      <div class="tab-content hidden" data-tabs-target="panel" data-tab="specifications">
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <% if @product.specifications.present? %>
            <% @product.specifications.each do |key, value| %>
              <div class="border-b border-gray-200 pb-4">
                <dt class="text-sm font-semibold text-gray-600 mb-1"><%= key.titleize %></dt>
                <dd class="text-base text-gray-900"><%= value %></dd>
              </div>
            <% end %>
          <% else %>
            <p class="text-gray-600">No specifications available.</p>
          <% end %>
        </dl>
      </div>

      <%# Reviews Tab %>
      <div class="tab-content hidden" data-tabs-target="panel" data-tab="reviews">
        <%= render 'reviews/section', product: @product %>
      </div>
    </div>

    <%# Related Products %>
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-8">You May Also Like</h2>
      <%# This would be populated by a recommendation service %>
      <div class="product-grid">
        <%# Render related products here %>
      </div>
    </div>
  </div>
</div>
<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "The Final Market" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
    <%# Toastify for notifications %>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
  </head>

  <body class="min-h-screen bg-gradient-to-br from-spirit-light to-white overflow-hidden">
    <%# Decorative Spirit Orbs %>
    <div class="spirit-orb spirit-orb-top-right"></div>
    <div class="spirit-orb spirit-orb-bottom-left"></div>
    
    <%# Decorative Nature Elements %>
    <div class="spirit-leaves spirit-leaves-top"></div>
    <div class="spirit-leaves spirit-leaves-bottom"></div>

    <%# Loading Spinner %>
    <div data-controller="loading" class="fixed inset-0 flex items-center justify-center z-50 pointer-events-none">
      <div data-loading-target="spinner" class="spirit-loader hidden"></div>
    </div>

    <%# Main Content %>
    <div class="relative z-10" data-controller="notifications"
         data-notifications-count-value="<%= current_user&.unread_notifications_count.to_i || 0 %>">
      
      <header class="bg-white/80 backdrop-blur-sm shadow-lg border-b border-spirit-light" data-controller="mobile-menu">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between h-16">
            <div class="flex">
              <%= link_to root_path, class: "flex-shrink-0 flex items-center group" do %>
                <%= image_tag "logo.svg", class: "h-12 w-auto transition-transform group-hover:scale-110" %>
                <span class="ml-3 text-2xl font-bold bg-gradient-to-r from-spirit-primary to-spirit-secondary bg-clip-text text-transparent">The Final Market</span>
              <% end %>

              <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                <%= link_to "Browse", items_path, 
                    class: "border-transparent text-spirit-dark hover:border-spirit-secondary hover:text-spirit-primary inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium transition-all duration-300" %>
                
                <%= link_to "Categories", categories_path,
                    class: "border-transparent text-spirit-dark hover:border-spirit-secondary hover:text-spirit-primary inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium transition-all duration-300" %>
              </div>
            </div>

            <%# Mobile menu button %>
            <div class="sm:hidden flex items-center">
              <button type="button" 
                      data-action="mobile-menu#toggle"
                      class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500">
                <span class="sr-only">Open main menu</span>
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
              </button>
            </div>

            <div class="flex items-center">
              <div class="flex-1 flex items-center justify-center px-2 lg:ml-6 lg:justify-end">
                <div class="max-w-lg w-full lg:max-w-xs" data-controller="search">
                  <%= form_with url: items_path, method: :get, 
                      class: "relative",
                      data: { 
                        turbo_frame: "search_results",
                        search_target: "form"
                      } do |f| %>
                    <div class="relative">
                      <%= f.text_field :query,
                          class: "block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                          placeholder: "Search items...",
                          data: {
                            search_target: "input",
                            action: "input->search#search"
                          } %>
                      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                          <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                        </svg>
                      </div>
                    </div>
                    
                    <div data-search-target="results" class="absolute z-10 mt-1 w-full bg-white shadow-lg rounded-md"></div>
                  <% end %>
                </div>
              </div>

              <% if user_signed_in? %>
                <div class="hidden sm:ml-6 sm:flex sm:items-center space-x-4">
                  <%= link_to cart_items_path, 
                      class: "relative p-2 text-gray-600 hover:text-gray-900",
                      data: { turbo_frame: "cart" } do %>
                    <span class="sr-only">Cart</span>
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                    <span data-cart-target="count"
                          class="absolute -top-1 -right-1 inline-flex items-center justify-center px-2 py-1 text-xs font-bold leading-none text-white transform translate-x-1/2 -translate-y-1/2 bg-blue-600 rounded-full">
                      <%= current_user.cart_items.sum(:quantity) %>
                    </span>
                  <% end %>

                  <button type="button" 
                          class="relative p-2 text-gray-600 hover:text-gray-900"
                          data-notifications-target="button"
                          data-action="click->notifications#toggleDropdown">
                    <span class="sr-only">View notifications</span>
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                    </svg>
                    <span data-notifications-target="badge"
                          class="<%= 'hidden' if current_user.unread_notifications_count.zero? %> absolute -top-1 -right-1 inline-flex items-center justify-center px-2 py-1 text-xs font-bold leading-none text-white transform translate-x-1/2 -translate-y-1/2 bg-red-600 rounded-full">
                      <%= current_user.unread_notifications_count %>
                    </span>
                  </button>

                  <div class="ml-3 relative" data-controller="dropdown">
                    <div>
                      <button type="button" 
                              class="bg-white rounded-full flex text-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" 
                              id="user-menu-button"
                              data-action="click->dropdown#toggle"
                              aria-expanded="false"
                              aria-haspopup="true">
                        <span class="sr-only">Open user menu</span>
                        <%= image_tag current_user.avatar.attached? ? current_user.avatar : "default_avatar.png",
                            class: "h-8 w-8 rounded-full" %>
                      </button>
                    </div>

                    <div class="hidden origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5 focus:outline-none"
                         data-dropdown-target="menu"
                         role="menu" 
                         aria-orientation="vertical" 
                         aria-labelledby="user-menu-button"
                         tabindex="-1">
                      <%= link_to "Your Profile", user_path(current_user),
                          class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100",
                          role: "menuitem",
                          tabindex: "-1" %>
                      
                      <%= link_to "Settings", edit_user_path(current_user),
                          class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100",
                          role: "menuitem",
                          tabindex: "-1" %>
                      
                      <%= button_to "Sign out", logout_path, 
                          method: :delete,
                          class: "block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100",
                          role: "menuitem",
                          tabindex: "-1" %>
                    </div>
                  </div>
                </div>
              <% else %>
                <div class="hidden sm:flex sm:items-center sm:space-x-4">
                  <%= link_to "Sign in", login_path, 
                      class: "text-gray-500 hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium" %>
                  
                  <%= link_to "Sign up", signup_path,
                      class: "bg-blue-600 text-white hover:bg-blue-700 px-3 py-2 rounded-md text-sm font-medium" %>
                </div>
              <% end %>

              <%# Mobile menu button %>
              <div class="flex items-center sm:hidden">
                <button type="button"
                        class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500"
                        data-action="click->mobile-menu#toggle"
                        aria-expanded="false">
                  <span class="sr-only">Open main menu</span>
                  <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                  </svg>
                </button>
              </div>
            </div>
          </div>
        </nav>

        <%# Mobile menu panel %>
        <div class="sm:hidden hidden transform transition-all duration-300 ease-in-out" data-mobile-menu-target="menu">
          <div class="pt-2 pb-3 space-y-1">
            <%= link_to "Browse", items_path,
                class: "text-spirit-dark hover:bg-spirit-light/50 hover:text-spirit-primary block px-3 py-2 rounded-md text-base font-medium transition-all duration-300" %>
            
            <%= link_to "Categories", categories_path,
                class: "text-spirit-dark hover:bg-spirit-light/50 hover:text-spirit-primary block px-3 py-2 rounded-md text-base font-medium transition-all duration-300" %>
          </div>

          <% if user_signed_in? %>
            <div class="pt-4 pb-3 border-t border-gray-200">
              <div class="flex items-center px-4">
                <div class="flex-shrink-0">
                  <%= image_tag current_user.avatar_url || "default-avatar.png", 
                      class: "h-10 w-10 rounded-full" %>
                </div>
                <div class="ml-3">
                  <div class="text-base font-medium text-gray-800"><%= current_user.name %></div>
                  <div class="text-sm font-medium text-gray-500"><%= current_user.email %></div>
                </div>
              </div>
              <div class="mt-3 space-y-1">
                <%= link_to "Your Profile", profile_path,
                    class: "block px-4 py-2 text-base font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-100" %>
                
                <%= link_to "Settings", settings_path,
                    class: "block px-4 py-2 text-base font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-100" %>
                
                <%= button_to "Sign out", logout_path, method: :delete,
                    class: "block w-full text-left px-4 py-2 text-base font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-100" %>
              </div>
            </div>
          <% else %>
            <div class="pt-4 pb-3 border-t border-gray-200">
              <div class="space-y-1">
                <%= link_to "Sign in", login_path,
                    class: "block px-4 py-2 text-base font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-100" %>
                
                <%= link_to "Sign up", signup_path,
                    class: "block px-4 py-2 text-base font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-100" %>
              </div>
            </div>
          <% end %>
        </div>
      </header>

      <main>
        <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
          <%= turbo_frame_tag "flash", class: "mb-4 relative" do %>
            <% if notice %>
              <div class="spirit-flash spirit-flash-success rounded-lg p-4 shadow-spirit">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="relative">
                      <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      <div class="absolute inset-0 animate-spirit-pulse opacity-50">
                        <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                      </div>
                    </div>
                  </div>
                  <div class="ml-3">
                    <p class="text-base font-medium"><%= notice %></p>
                  </div>
                </div>
              </div>
            <% end %>

            <% if alert %>
              <div class="spirit-flash spirit-flash-error rounded-lg p-4 shadow-spirit">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="relative">
                      <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      <div class="absolute inset-0 animate-spirit-pulse opacity-50">
                        <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                      </div>
                    </div>
                  </div>
                  <div class="ml-3">
                    <p class="text-sm font-medium text-red-800"><%= alert %></p>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>

          <%= yield %>
    </main>
  </body>
</html>

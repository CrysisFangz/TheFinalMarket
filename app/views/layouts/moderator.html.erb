<!DOCTYPE html>
<html>
  <head>
    <title>TheFinalMarket Moderator</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-info">
      <div class="container">
        <%= link_to "TheFinalMarket Moderator", moderator_root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#modNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="modNavbar">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <%= link_to "All Disputes", moderator_disputes_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "My Cases", moderator_disputes_path(my_cases: true), class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Unassigned", moderator_disputes_path(unassigned: true), class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Back to Site", root_path, class: "nav-link" %>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <% flash.each do |name, msg| %>
        <div class="alert alert-<%= name == 'notice' ? 'success' : name %> alert-dismissible fade show">
          <%= msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
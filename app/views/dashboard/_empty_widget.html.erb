<%#
  Empty Widget Partial
  Displays empty state for widgets with no data
  Provides call-to-action buttons and proper accessibility
%>
<%
  icon ||= nil
  message ||= 'No data available'
  action_link ||= nil
  action_text ||= 'Take Action'
  action_class ||= 'btn-primary-modern'
%>
<div class="<%= empty_widget_classes %>">
  <% if icon %>
    <%= icon %>
  <% else %>
    <svg class="<%= empty_widget_classes %>-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
    </svg>
  <% end %>

  <p class="<%= empty_widget_text_classes %>">
    <%= message %>
  </p>

  <% if action_link %>
    <%= link_to action_link, class: action_class, role: 'button' do %>
      <%= action_text %>
    <% end %>
  <% end %>
</div>
<%# app/views/categories/_form.html.erb %>
<%= form_with(model: category, local: true, class: "space-y-6") do |f| %>
  <% if category.errors.any? %>
    <div class="bg-red-50 text-red-500 p-4 rounded-lg">
      <h2 class="text-lg font-bold mb-2">
        <%= pluralize(category.errors.count, "error") %> prevented this category from being saved:
      </h2>
      <ul class="list-disc pl-5">
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.label :parent_id, "Parent Category", class: "block text-sm font-medium text-gray-700" %>
    <%= f.collection_select :parent_id, @categories, :id, :full_name,
        { include_blank: "None (Main Category)" },
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.label :position, class: "block text-sm font-medium text-gray-700" %>
    <%= f.number_field :position, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div class="flex items-center">
    <%= f.check_box :active, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
    <%= f.label :active, class: "ml-2 block text-sm text-gray-900" %>
  </div>

  <div class="flex justify-end space-x-4">
    <%= link_to "Cancel", categories_path, class: "px-4 py-2 border rounded text-gray-700 hover:bg-gray-50" %>
    <%= f.submit class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
  </div>
<% end %>
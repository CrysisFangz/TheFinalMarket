<%# app/views/reviews/_form.html.erb %>
<div class="bg-white rounded-lg shadow-sm p-6">
  <%= form_with(model: [reviewable, review], local: true, class: "space-y-6") do |f| %>
    <%= render 'shared/error_messages', object: f.object if f.object.errors.any? %>

    <div class="space-y-6">
      <div>
        <label class="block text-lg font-medium text-gray-900 mb-4">Your Rating</label>
        <div class="flex items-center space-x-2">
          <% 5.times do |i| %>
            <label class="cursor-pointer">
              <%= f.radio_button :rating, i + 1, 
                  class: "hidden peer", 
                  data: { action: "change->rating#update" } %>
              <svg class="w-10 h-10 text-gray-300 peer-checked:text-yellow-400 hover:text-yellow-400 transition-colors" 
                  fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            </label>
          <% end %>
        </div>
      </div>

      <div>
        <label class="block text-lg font-medium text-gray-900 mb-2">What did you like?</label>
        <%= f.text_area :pros, rows: 3,
            placeholder: "Share what you enjoyed about this #{reviewable.class.name.downcase}...",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-spirit-primary focus:ring-spirit-primary" %>
        <p class="mt-1 text-sm text-gray-500">
          Highlight the positive aspects of your experience
        </p>
      </div>

      <div>
        <label class="block text-lg font-medium text-gray-900 mb-2">What could be improved?</label>
        <%= f.text_area :cons, rows: 3,
            placeholder: "Share constructive feedback...",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-spirit-primary focus:ring-spirit-primary" %>
        <p class="mt-1 text-sm text-gray-500">
          Provide suggestions for improvement
        </p>
      </div>

      <div>
        <label class="block text-lg font-medium text-gray-900 mb-2">Detailed Review</label>
        <%= f.text_area :content, rows: 5,
            placeholder: "Share your overall experience...",
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-spirit-primary focus:ring-spirit-primary" %>
        <p class="mt-1 text-sm text-gray-500">
          Write a comprehensive review (minimum 10 characters)
        </p>
      </div>

      <% if f.object.review_invitation %>
        <%= f.hidden_field :review_invitation_id %>
        <%= f.hidden_field :order_id %>
      <% end %>
    </div>

    <div class="flex justify-end space-x-3 pt-5">
      <%= link_to 'Cancel', :back, 
          class: "inline-flex justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-spirit-primary focus:ring-offset-2" %>
      <%= f.submit "Submit Review", 
          class: "inline-flex justify-center rounded-md border border-transparent bg-spirit-primary px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-spirit-secondary focus:outline-none focus:ring-2 focus:ring-spirit-primary focus:ring-offset-2" %>
    </div>
  <% end %>
</div>
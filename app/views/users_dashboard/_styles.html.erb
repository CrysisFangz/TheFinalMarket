<style>
  /* Dashboard Styles */
  .dashboard-container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .dashboard-header {
    background: linear-gradient(135deg, var(--primary), var(--primary-dark));
    padding: 3rem 2rem;
    border-radius: var(--radius-xl);
    margin-bottom: 2rem;
    color: white;
    box-shadow: var(--shadow-xl);
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .greeting-text {
    font-size: 2rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
  }

  .user-name {
    background: linear-gradient(135deg, #FFD700, #FFA500);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .greeting-subtitle {
    font-size: 1.125rem;
    opacity: 0.9;
  }

  .header-actions {
    display: flex;
    gap: 1rem;
  }

  .stats-grid-dashboard {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .stat-card-dashboard {
    background: white;
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    box-shadow: var(--shadow-sm);
    display: flex;
    align-items: start;
    gap: 1rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .stat-card-dashboard::before {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    width: 100px;
    height: 100px;
    background: currentColor;
    opacity: 0.05;
    border-radius: 50%;
    transform: translate(30%, -30%);
  }

  .stat-card-dashboard:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .stat-icon-container {
    width: 64px;
    height: 64px;
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    position: relative;
    z-index: 1;
  }

  .stat-icon-container svg {
    width: 32px;
    height: 32px;
    color: white;
  }

  .stat-blue {
    background: linear-gradient(135deg, var(--primary-light), var(--primary));
  }

  .stat-green {
    background: linear-gradient(135deg, #10B981, #059669);
  }

  .stat-purple {
    background: linear-gradient(135deg, #8B5CF6, #7C3AED);
  }

  .stat-orange {
    background: linear-gradient(135deg, #F59E0B, #D97706);
  }

  .stat-details {
    flex: 1;
  }

  .stat-value {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--gray-900);
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--gray-600);
    margin-bottom: 0.5rem;
  }

  .stat-change {
    display: flex;
    align-items: center;
    font-size: 0.75rem;
    color: var(--gray-500);
  }

  .stat-change.positive {
    color: var(--success);
  }

  .stat-change svg {
    margin-right: 0.25rem;
  }

  .stat-action {
    position: absolute;
    bottom: 1rem;
    right: 1rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--primary);
    text-decoration: none;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .stat-card-dashboard:hover .stat-action {
    opacity: 1;
  }

  .dashboard-grid {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 2rem;
  }

  .dashboard-column-main {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .dashboard-column-sidebar {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .widget-card {
    background: white;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .widget-card:hover {
    box-shadow: var(--shadow-md);
  }

  .widget-header {
    padding: 1.5rem;
    border-bottom: 1px solid var(--gray-200);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .widget-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .widget-title svg {
    color: var(--primary);
  }

  .widget-title h3 {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--gray-900);
  }

  .widget-action {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--primary);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .widget-action:hover {
    color: var(--primary-dark);
  }

  .widget-content {
    padding: 1.5rem;
  }

  .orders-list-compact {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .order-item-compact {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: var(--gray-50);
    border-radius: var(--radius-md);
    transition: all 0.3s ease;
  }

  .order-item-compact:hover {
    background: var(--gray-100);
    transform: translateX(4px);
  }

  .order-item-icon {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, var(--primary-light), var(--primary));
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    flex-shrink: 0;
  }

  .order-item-details-compact {
    flex: 1;
  }

  .order-item-title {
    font-weight: 700;
    color: var(--gray-900);
    margin-bottom: 0.25rem;
  }

  .order-item-meta {
    font-size: 0.875rem;
    color: var(--gray-600);
  }

  .status-badge-compact {
    padding: 0.375rem 0.75rem;
    border-radius: var(--radius-md);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
  }

  .status-pending,
  .status-processing {
    background: rgba(59, 130, 246, 0.1);
    color: #1E40AF;
  }

  .status-shipped {
    background: rgba(245, 158, 11, 0.1);
    color: #B45309;
  }

  .status-delivered {
    background: rgba(16, 185, 129, 0.1);
    color: #065F46;
  }

  .empty-widget {
    text-align: center;
    padding: 3rem 1rem;
  }

  .empty-widget-text {
    color: var(--gray-600);
    margin-top: 1rem;
  }

  .activity-timeline {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .activity-item {
    display: flex;
    align-items: start;
    gap: 1rem;
    padding: 1rem;
    background: var(--gray-50);
    border-radius: var(--radius-md);
    transition: all 0.3s ease;
  }

  .activity-item:hover {
    background: var(--gray-100);
  }

  .activity-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    flex-shrink: 0;
  }

  .activity-icon svg {
    width: 20px;
    height: 20px;
  }

  .activity-icon-blue {
    background: linear-gradient(135deg, var(--primary-light), var(--primary));
  }

  .activity-icon-purple {
    background: linear-gradient(135deg, #8B5CF6, #7C3AED);
  }

  .activity-icon-pink {
    background: linear-gradient(135deg, #EC4899, #DB2777);
  }

  .activity-content {
    flex: 1;
  }

  .activity-title {
    font-weight: 600;
    color: var(--gray-900);
    margin-bottom: 0.25rem;
  }

  .activity-meta {
    font-size: 0.875rem;
    color: var(--gray-600);
  }

  .filter-pills {
    display: flex;
    gap: 0.5rem;
  }

  .filter-pill {
    padding: 0.375rem 0.75rem;
    border-radius: var(--radius-md);
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--gray-700);
    background: var(--gray-100);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .filter-pill:hover {
    background: var(--gray-200);
  }

  .filter-pill.active {
    background: var(--primary);
    color: white;
  }

  .quick-actions-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .quick-action-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    padding: 1.5rem 1rem;
    background: var(--gray-50);
    border-radius: var(--radius-lg);
    text-decoration: none;
    color: var(--gray-900);
    font-weight: 600;
    font-size: 0.875rem;
    transition: all 0.3s ease;
    position: relative;
  }

  .quick-action-item:hover {
    background: var(--primary);
    color: white;
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
  }

  .quick-action-item:hover .quick-action-icon {
    background: white;
    color: var(--primary);
  }

  .quick-action-icon {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, var(--primary-light), var(--primary));
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    transition: all 0.3s ease;
  }

  .quick-action-icon svg {
    width: 24px;
    height: 24px;
  }

  .notification-badge {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    background: var(--danger);
    color: white;
    font-size: 0.625rem;
    font-weight: 700;
    padding: 0.125rem 0.5rem;
    border-radius: 999px;
    min-width: 20px;
    text-align: center;
  }

  .widget-gamification {
    background: linear-gradient(135deg, #8B5CF6, #7C3AED);
    color: white;
  }

  .widget-gamification .widget-header {
    border-color: rgba(255, 255, 255, 0.2);
  }

  .widget-gamification .widget-title h3 {
    color: white;
  }

  .widget-gamification .widget-title svg {
    color: white;
  }

  .gamification-stats {
    text-align: center;
  }

  .level-badge {
    margin-bottom: 1.5rem;
  }

  .level-number {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
  }

  .level-title {
    font-size: 1.125rem;
    font-weight: 600;
    opacity: 0.9;
  }

  .points-progress {
    margin-bottom: 1.5rem;
  }

  .progress-bar-container {
    width: 100%;
    height: 12px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 999px;
    overflow: hidden;
    margin-bottom: 0.75rem;
  }

  .progress-bar-fill {
    height: 100%;
    background: linear-gradient(90deg, #FFD700, #FFA500);
    border-radius: 999px;
    transition: width 0.5s ease;
  }

  .progress-label {
    font-size: 0.875rem;
    opacity: 0.9;
  }

  .achievements-preview {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .achievement-badge {
    width: 56px;
    height: 56px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    backdrop-filter: blur(10px);
  }

  .achievement-badge.locked {
    opacity: 0.3;
  }

  .security-checklist {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .security-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    background: var(--gray-50);
    border-radius: var(--radius-md);
    color: var(--gray-700);
  }

  .security-item.completed {
    background: rgba(16, 185, 129, 0.1);
    color: var(--success);
  }

  .security-item svg {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  @keyframes bounce-once {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-bounce-once {
    animation: bounce-once 0.6s ease;
  }

  @keyframes scale-in {
    0% {
      transform: scale(0.9);
      opacity: 0;
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }

  .animate-scale-in {
    animation: scale-in 0.4s ease;
  }

  @keyframes slide-in-right {
    0% {
      transform: translateX(20px);
      opacity: 0;
    }
    100% {
      transform: translateX(0);
      opacity: 1;
    }
  }

  .animate-slide-in-right {
    animation: slide-in-right 0.3s ease;
  }

  @media (max-width: 1280px) {
    .dashboard-grid {
      grid-template-columns: 1fr;
    }

    .dashboard-column-sidebar {
      order: -1;
    }
  }

  @media (max-width: 768px) {
    .dashboard-header {
      padding: 2rem 1.5rem;
    }

    .header-content {
      flex-direction: column;
      align-items: flex-start;
    }

    .greeting-text {
      font-size: 1.5rem;
    }

    .stats-grid-dashboard {
      grid-template-columns: 1fr;
    }

    .quick-actions-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .stat-value {
      font-size: 2rem;
    }
  }

  @media (max-width: 640px) {
    .quick-actions-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>